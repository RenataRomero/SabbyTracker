<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/home_img_size"
            android:layout_height="@dimen/home_img_size"
            android:background="@drawable/good"
            android:id="@+id/home_img_status"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_status_good"
            android:layout_below="@id/home_img_status"
            android:textSize="@dimen/home_txt_size"
            android:textAlignment="center"
            android:id="@+id/home_txt_status"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>